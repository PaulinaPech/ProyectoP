<form method="post" action="/new-entry" class="card card-body">

    <div class="container p-4">
        <div class="form-gruop">
        <label for="name">Producto</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="Ingresa un nombre de producto" autofocus required>
        </div>
    
        <div class="form-gruop">
        <label for="precio">Precio</label>
        <input type="numeric" class="form-control" name="precio" id="precio" placeholder="Ingresa el precio del producto" autofocus required>
        </div>
    
        <div class="form-gruop">
        <label for="stock">Stock</label>
        <input type="numeric" class="form-control" name="stock" id="stock" placeholder="Cantidad en Stock" autofocus required>
        </div>
    
        <div class="form-gruop">
        <label for="image">Imagen</label>
        <input type="text" class="form-control" name="image" id="image" placeholder="http://website.com" required>
        </div>
    </div>    
    <input type="submit" value="Save Product" class="btn btn-secondary">
    </form>